<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp">
        <ImageView
            android:id="@+id/goal_layout_upper_video"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/uper_video_dumb"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dark_botom_box"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/goal_layout_user_image_round"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_round_icon"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goal_layout_username"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="User One"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@drawable/yellow_star_small" />
                        <TextView
                            android:id="@+id/goal_layout_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:textColor="@color/star_yellow"
                            android:text="122"/>
                        <TextView
                            android:id="@+id/goal_layout_week_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/tex_box_border_white"
                            android:textColor="@color/white"
                            android:text="0"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@drawable/comment_cloud_small"/>
                        <TextView
                            android:id="@+id/goal_layout_number_of_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="54"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/goal_layout_star"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/yellow_star_big"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>