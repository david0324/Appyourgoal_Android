<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/goal_single_layout_video"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dark_botom_box"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/goal_layout_single_user_image_round"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goal_single_layout_username"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <ImageView
                            android:id="@+id/goal_single_layout_small_star"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/white_small_star" />
                        <TextView
                            android:id="@+id/goal_single_layout_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/white"
                            android:text=""/>
                        <TextView
                            android:id="@+id/goal_layout_week_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/tex_box_border_white"
                            android:textColor="@color/white"
                            android:text="0"
                            />
                        <ImageView
                            android:id="@+id/goal_single_layout_comment_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/comment_cloud_small"/>
                        <TextView
                            android:id="@+id/goal_single_layout_number_of_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/goal_single_layout_star"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/image_star_grey"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>