<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_edit_background">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/uper_bar_dark">
        <TextView
            android:id="@+id/profile_edit_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/edit_profile_orange_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cancel"
            android:clickable="true"
            android:onClick="onCancelEditProfile"/>
        <TextView
            android:id="@+id/profile_edit_profile_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/baby_blue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Profile Editor"/>
        <TextView
            android:id="@+id/profile_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@drawable/edit_profile_green_selector"
            android:clickable="true"
            android:onClick="onSaveEditProfile"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Save"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/baby_blue_edit">
        <TextView
            android:id="@+id/profile_edit_border_tap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tap border to change color"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">
    <ProgressBar
        android:id="@+id/profile_edit_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/profile_edit_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_margin="25dp"
        android:background="@color/baby_blue"
        android:layout_weight="8">
        <ImageView
            android:id="@+id/profile_edit_player_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/male_avatar"
            />
        <ImageView
            android:id="@+id/profile_edit_stripe"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/stripe_image"
            android:tint="@color/star_yellow"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-75dp"
            android:orientation="vertical"
            android:layout_below="@+id/profile_edit_player_image"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <EditText
                android:id="@+id/edit_profile_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:minHeight="25dp"
                android:minWidth="100dp"
                android:background="@color/baby_blue"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:singleLine="true"
                android:hint="Enter Name"
                android:text=""/>
            <EditText
                android:id="@+id/edit_profile_player_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/baby_blue"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:singleLine="true"
                android:hint="Enter Country"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/profile_edit_contest_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/baby_blue"
        android:text="Contest Rules"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/profile_edit_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/baby_blue"
        android:text="Privacy Policy"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/profile_edit_terms_of_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="@color/baby_blue"
        android:text="Terms of Use"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>