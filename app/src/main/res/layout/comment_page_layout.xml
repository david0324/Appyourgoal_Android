<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uper_bar_dark">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/uper_bar_dark">
        <TextView
            android:id="@+id/comment_page_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/text_view_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back"
            android:clickable="true"
            android:onClick="onCancelCommentPage"/>
        <TextView
            android:id="@+id/comment_page_layout_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/baby_blue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Goal"/>
        <ImageView
            android:id="@+id/comment_page_layout_share"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/square_up"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="9">
        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="5"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/podium_layout_upper_video"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/play_button"
                android:id="@+id/comment_page_play_button"/>

            <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/dark_botom_box"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/comment_layout_user_image_round"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:onClick="onCommentUserIconCLicked"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/comment_layout_username"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="User One"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <ImageView
                            android:id="@+id/comment_layout_stars_small"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/white_small_star" />
                        <TextView
                            android:id="@+id/comment_layout_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:textColor="@android:color/white"
                            android:paddingLeft="5dp"
                            android:text=""/>
                        <TextView
                            android:id="@+id/comment_layout_week_number_of_stars"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/tex_box_border_white"
                            android:textColor="@color/white"
                            android:text="0"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:src="@drawable/comment_cloud_small"
                            android:paddingLeft="5dp"
                            android:id="@+id/comment_layout_cloud" />
                        <TextView
                            android:id="@+id/comment_layout_number_of_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text=""
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/comment_layout_star"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/image_star_grey"
                    android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/comment_page_layout_list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"></ListView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@color/uper_bar_dark"
            android:orientation="horizontal"
            android:weightSum="3">
            <EditText
                android:id="@+id/comment_page_layout_comment_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/edit_text_no_underline"
                android:focusable="false"
                android:textColor="@android:color/white"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:hint="Your comment"/>
            <Button
                android:id="@+id/comment_page_layout_post_comment_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/baby_blue"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:text="POST"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>